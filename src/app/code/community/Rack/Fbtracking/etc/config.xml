<config>
    <modules>
        <Rack_Fbtracking>
            <version>1.0.0</version>
        </Rack_Fbtracking>
    </modules>
    <global>
        <helpers>
            <fbtracking>
                <class>Rack_Fbtracking_Helper</class>
            </fbtracking>
        </helpers>
        <blocks>
            <fbtracking>
                <class>Rack_Fbtracking_Block</class>
            </fbtracking>
        </blocks>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Rack_Fbtracking>
                    <files>
                        <default>Rack_Fbtracking.csv</default>
                    </files>
                </Rack_Fbtracking>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Rack_Fbtracking>
                    <files>
                        <default>Rack_Fbtracking.csv</default>
                    </files>
                </Rack_Fbtracking>
            </modules>
        </translate>
        <layout>
            <updates>
                <fbtracking>
                    <file>rack_fbtracking.xml</file>
                </fbtracking>
            </updates>
        </layout>
    </frontend>
    <default>
        <fbtracking>
            <tracking>
                <is_active>0</is_active>
            </tracking>
            <conversion>
                <is_active>0</is_active>
            </conversion>
        </fbtracking>
    </default>
</config>